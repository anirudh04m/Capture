<% include ./partials/lheader %>

 
 <div class = "container" style="margin-top:65px;">
     <h1 style="text-align:center;margin-bottom:20px;">Capture</h1>
     <div>
           <img id="showp" src="<%=photo.image %>">
 <div class="caption">
     <h4 style="position:absolute;left:355px; margin-top:20px;"><%= photo.title %></h4>
 </div>
 </div>
 <form action="/capture/<%=photo.id%>/like?_method=PUT" method="post">
 <div class="ui labeled button" tabindex="0" style="position:absolute;left:355px; margin-top:50px;">
  <input type="submit" id="button" name="btn" class="ui red button" data-id="{{photo.id}}" value="<%=photo.likeFlag%>">
  <div class="ui basic red left pointing label"><input id="likes" size="4" style="border:none;background:transparent" type="text" name ="like" value="<%=photo.likes%>" readonly> </div>
</div>

</form>
 
 
 <div id="comment" style=" position:relative;margin: 0 auto; width:50%; border:3px solid #95DBFE; margin-top:100px;">
 <p style=" background:#FFF17B; font-size: 20px; padding-left:10px; margin-top:10px; font-family: "Times New Roman", Times, serif; ">Comments:</p>
  <% photo.comments.forEach(function(comment){ %>
     <div class="caption">
     <p style="background:#E9E8E8; margin-bottom:10px;padding-left:10px;"><%= comment.text %></p>
 </div>
 <% }) %>
     
 <a href="/capture/<%= photo._id %>/comments/new" class="ui blue basic button" style="margin: 0 0 10px 200px;" >Add new comment </a>
 </div>
    
 </div>
 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


<script type="text/javascript">

 var text = document.querySelector("#button");
var likes = document.querySelector("#likes");
var id = text.getAttribute("data-id");
var li;
//var ic = document.querySelector("button i");


text.onclick = change ;

function change()
{
  //console.log(text.value);
  console.log(text.value);
  if(text.value== "Like"){
    text.value = "Unlike";
    var l = likes.value;
     li = parseInt(l);
    li = li + 1;
    var ss = li.toString();
    likes.value = ss;}
    else if(text.value == "Unlike"){
    text.value = "Like";
    var l = likes.value;
     li = parseInt(l);
    li = li - 1;
    var ss = li.toString();
    likes.value = ss;}
}
 
</script>

     
     

